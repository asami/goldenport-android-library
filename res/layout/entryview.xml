<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	      android:orientation="vertical"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content">
  <LinearLayout android:id="@+id/g_entry_link_image_panel"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
    <org.goldenport.android.widgets.BitmapView
	android:id="@+id/g_entry_link_image"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"/>
    <LinearLayout
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
      <LinearLayout android:id="@+id/g_entry_link_title_panel"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content">
	<TextView android:id="@+id/g_entry_id"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"/>
	<TextView android:id="@+id/g_entry_title"
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"/>
      </LinearLayout>
      <TextView android:id="@+id/g_entry_summary"
		android:layout_toLeftOf="@id/g_entry_link_image_panel"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"/>
    </LinearLayout>
  </LinearLayout>
  <org.goldenport.android.widgets.DateTimeView android:id="@+id/g_entry_published"
					       android:layout_width="wrap_content"
					       android:layout_height="wrap_content"
					       />
  <org.goldenport.android.widgets.DateTimeView android:id="@+id/g_entry_updated"
					       android:layout_width="wrap_content"
					       android:layout_height="wrap_content"
					       />
  <TextView android:id="@+id/g_entry_categories"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    />
  <TextView android:id="@+id/g_entry_links"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    />
  <TextView android:id="@+id/g_entry_authors"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    />
  <TextView android:id="@+id/g_entry_contributors"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    />
  <TextView android:id="@+id/g_entry_rights"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    />
  <TextView android:id="@+id/g_entry_source"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    />
  <TextView android:id="@+id/g_entry_content_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    />
  <WebView android:id="@+id/g_entry_content_html"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    />
  <TextView android:id="@+id/g_entry_link_geo"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    />
</LinearLayout>
